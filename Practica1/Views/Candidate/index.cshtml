@model IEnumerable<Practica1.Models.Candidate>

@{
    ViewData["Title"] = "index";
}

<h1>index</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table border" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateCandidate)
            </th>
            <th>
                Number of evaluations
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateCandidate)
            </td>
            <td class="text-center">
                @if (item.Evaluations.Count <= 0)
                {
                    <span class="text-danger font-weight-bold h5">@item.Evaluations.Count</span>
                }
                else { 
                    <span class="text-success font-weight-bold h5">@item.Evaluations.Count</span>               
                }     
            </td>
            <td>
                <a class="btn btn-success btn-sm" style="display:block" asp-controller="Evaluation" asp-action="Create" asp-route-id="@item.CandidateID">Add Evaluation</a> <br />
                <a class="" asp-action="Edit" asp-route-id="@item.CandidateID">Edit</a>
                <a class="" asp-action="Details" asp-route-id="@item.CandidateID">Details</a>
                <a class="" asp-action="Delete" asp-route-id="@item.CandidateID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
